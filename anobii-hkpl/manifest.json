{
  "name": "aNobii with HKPL",
  "version": "3",
  "description": "Add ability to search Hong Kong Public Library online catalogue in aNobii pages including shelf, wishlist and search result",
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["http://www.anobii.com/books/*", "http://www.anobii.com/wishlist*",
                  "http://www.anobii.com/*/books*", "http://www.anobii.com/*/wishlist*",
                  "http://www.anobii.com/search*", "http://www.anobii.com/contributors/*",
                  "http://www.anobii.com/tags/*", "http://www.anobii.com/news_neighbor*",
                  "http://libcat.hkpl.gov.hk/webpac_cjk/wgbroker.exe*",
                  "http://libcat.hkpl.gov.hk/webpac_eng/wgbroker.exe*",
                  "https://www.hkpl.gov.hk/tc_chi/collections/collections_bs/collections_bs.html*",
                  "http://www.books.com.tw/exep/prod/booksfile.php?item=*"],
      "js": ["xhrproxy.js", "ellab-utils.js", "ellab-big5.js", "anobiihkpl.user.js"]
    }
  ],
  "permissions": [
    "http://libcat.hkpl.gov.hk/", "http://www.anobii.com/", "http://www.books.com.tw/"
  ],
  "icons": {
    "128": "icon-128.png"
  }
}