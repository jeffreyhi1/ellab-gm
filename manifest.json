{
  "name": "Google Reader Unread Count",
  "version": "11",
  "description": "Display actual unread count instead of '1000+' in Google Reader.",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "include_globs": ["http://www.google.com/reader/*", "https://www.google.com/reader/*", 
                        "http://www.google.com.*/reader/*", "https://www.google.com.*/reader/*", 
                        "http://www.google.co.*/reader/*", "https://www.google.co.*/reader/*"],
      "js": ["googlereaderunreadcount.user.js"]
    }
  ],
  "icons": {
    "128": "icon-128.png"
  }
}
